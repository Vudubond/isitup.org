<?xml version="1.0" encoding="UTF-8"?>
<OpenSearchDescription xmlns="http://www.opensearch.org/Specifications/OpenSearch/1.1">
	<ShortName>Is it up?</ShortName>

	<Description>Check the availability of a url with Is it up?.</Description>

	<Image height="16" width="16" type="img/png">http://isitup.org/static/img/icon.png</Image>

	<Url type="text/html"
		method="get"
		template="http://isitup.org/{searchTerms}" />

	<Url type="application/opensearchdescription+xml"
		rel="self"
		template="http://isitup.org/static/xml/search.xml" />

	<Query role="example" searchTerms="example.com" />

	<OutputEncoding>UTF-8</OutputEncoding>

	<InputEncoding>UTF-8</InputEncoding>

	<SyndicationRight>open</SyndicationRight>

	<AdultContent>false</AdultContent>

	<Language>en</Language>
</OpenSearchDescription>